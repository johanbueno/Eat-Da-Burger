

<h1>Burgers!</h1>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <img src="/css/burger.jpeg">
    </div>
  </div>
</div>

<div class="container main_panel">
  <div class="row">
    <div class="col-md-6 toeat">
      <h2>Burgers to Eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 eaten">
      <h2>Burgers are eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12  submit-panel">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">More burgers?</label><br>

        </div>

        <button class="btn btn-success"  type="submit">Add burger to the order</button>
      </form>
    </div>
  </div>
</div>